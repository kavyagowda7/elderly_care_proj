<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================= DASHBOARD CARD ================= -->
    <style name="DashboardCard">
        <!-- spacing -->
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">140dp</item>

        <!-- center content -->
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

        <!-- rounded corners -->
        <item name="android:background">@drawable/bg_dashboard_card</item>
<!--        <item name="android:clipToOutline">true</item>-->

        <!-- 3D effect -->
        <item name="android:elevation">10dp</item>
        <item name="android:translationZ">6dp</item>

        <!-- click feedback -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ================= ICON ================= -->
    <style name="DashboardIconFrame">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DashboardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <!-- ================= CARD TEXT ================= -->
    <style name="CardTextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardTextSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.85</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ================= SETTINGS ================= -->
    <style name="SettingsRow">
        <item name="android:padding">16dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ================= PROFILE ================= -->
    <style name="ProfileRow">
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="ProfileValue">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ================= DAY TOGGLE ================= -->
    <style name="DayToggleButton">
        <item name="android:background">@drawable/day_selector</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
