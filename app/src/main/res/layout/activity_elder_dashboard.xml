<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElderDashboardActivity">

    <!-- ðŸŒ¿ MAIN DASHBOARD CONTENT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F7FB">

        <!-- ðŸŒ… Gradient Header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@drawable/header_gradient_pastel"
            android:backgroundTint="#C084FC"
            android:elevation="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_medicine"
                app:tint="@android:color/white"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Hello"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:text="User"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- â˜° Menu Button -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="66dp"
                android:layout_height="97dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- ðŸŒ¿ Scrollable Grid Section -->
        <ScrollView
            android:id="@+id/scrollContainer"
            android:layout_below="@id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:fillViewport="true">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/cardScan"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#E6E0F8">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_scan"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Scan Your Receipt" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="OCR medicine scanner" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:id="@+id/cardDashboard"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#D9F2E6">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_dashboard"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Dashboard" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Reports and analytics" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:id="@+id/cardDoctors"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#FFE5D9">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_doctor"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Doctors" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find nearby doctors" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 4 -->
            <LinearLayout
                android:id="@+id/cardTele"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#D9EFFF">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_telemedicine"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telecommunication" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Video consultation" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 5 -->
            <LinearLayout
                android:id="@+id/cardMedicines"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#FCE4EC">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_medicine"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Medicines" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Current prescriptions" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 6 -->
            <LinearLayout
                android:id="@+id/cardAppointments"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#FFF9C4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_appointments"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appointments" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming schedules" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 7 -->
            <LinearLayout
                android:id="@+id/cardHealthTips"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#e0aaff">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_health_tips"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Health Tips" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Wellness and diet" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 9 -->
            <LinearLayout
                android:id="@+id/cardUploadReports"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#D4F3EF">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_upload"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Reports" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload lab tests and prescriptions" />
                </LinearLayout>
            </LinearLayout>


            <!-- Card 8 -->
            <LinearLayout
                android:id="@+id/cardChatAI"
                style="@style/DashboardCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="#F0E6FF">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat_ai"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Chat with AI" />

                    <TextView
                        style="@style/CardTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health questions" />
                </LinearLayout>
            </LinearLayout>

        </GridLayout>



    </ScrollView>


</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
