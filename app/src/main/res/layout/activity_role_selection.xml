<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:text="Login as"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Select your role to continue"
            android:textSize="14sp"
            android:textColor="#888"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Doctor Role -->
        <LinearLayout
            android:id="@+id/doctorRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@drawable/role_card_shadow"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_doctor"
                android:backgroundTint="#2AB1FF"
                android:layout_marginEnd="20dp"
                android:background="@drawable/role_icon_circle"/>

            <TextView
                android:text="Doctor"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Elder Role -->
        <LinearLayout
            android:id="@+id/elderRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@drawable/role_card_shadow"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_elder"
                android:backgroundTint="#B66CFF"
                android:layout_marginEnd="20dp"
                android:background="@drawable/role_icon_circle"/>

            <TextView
                android:text="Elder"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Family Member Role -->
        <LinearLayout
            android:id="@+id/familyRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@drawable/role_card_shadow"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_family"
                android:backgroundTint="#38D39F"
                android:layout_marginEnd="20dp"
                android:background="@drawable/role_icon_circle"/>

            <TextView
                android:text="Family Member"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
