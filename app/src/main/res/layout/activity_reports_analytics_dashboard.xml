<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports and Analytics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3F3254"
            android:layout_marginBottom="12dp" />

        <!-- MEDICATION ADHERENCE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/pastel_lavender"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Medication Adherence"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#3F3254" />

                <ProgressBar
                    android:id="@+id/progressMedicine"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_purple"
                    android:max="100"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvMedicineSummary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Taken 0 of 0 (0%)"
                    android:textColor="#8A809A"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- APPOINTMENT SUMMARY -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/pastel_mint"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Appointments Summary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#3F3254" />

                <TextView
                    android:id="@+id/tvAppointmentSummary"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Completed: 0 | Upcoming: 0 | Rejected: 0"
                    android:textColor="#8A809A"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- HEALTH STATUS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/pastel_peach"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Health Status"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#3F3254" />

                <TextView
                    android:id="@+id/tvHealthStatus"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Status: --"
                    android:textStyle="bold"
                    android:textColor="#3F3254"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ALERT SUMMARY -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pastel_sky_blue"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Alerts and Reminders"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#3F3254" />

                <TextView
                    android:id="@+id/tvAlertSummary"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Reminders sent: 0"
                    android:textColor="#8A809A"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
