<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#7B42F6"
        android:endColor="#4C6EF5"
        android:angle="90" />

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside the button -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

</shape>
