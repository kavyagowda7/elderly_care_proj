<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F7FB"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button & Title -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:src="@drawable/ic_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"/>

        <TextView
            android:text="TeleConsultation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Big Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/tele_top_banner"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:text="Start Instant Video Consultation"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:text="Scheduled Video Consultations"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Recycler View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDoctorVideoAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyDoctorVideo"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_white_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="No Video Consultations Yet"
            android:textSize="16sp"
            android:textColor="#777"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Instructions -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_white_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Before You Start:"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:text="• Ensure good internet connection"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#444"/>

        <TextView
            android:text="• Test your camera and microphone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#444"/>

        <TextView
            android:text="• Keep patient medical records ready"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#444"/>
    </LinearLayout>

</LinearLayout>
