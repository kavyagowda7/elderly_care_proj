<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="14dp"
    android:layout_margin="12dp"
    android:elevation="4dp"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left avatar (initials) -->
        <TextView
            android:id="@+id/tvInitials"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="SJ"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/doctor_initials_bg" />

        <!-- Name + specialist -->
        <LinearLayout
            android:id="@+id/nameArea"
            android:orientation="vertical"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:text="Dr. Sarah Johnson"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvSpecialist"
                android:text="Cardiologist"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="4.8 â˜…"
            android:textSize="14sp"
            android:textColor="#F2B01E"/>

        <!-- License -->
        <TextView
            android:id="@+id/tvLicense"
            android:layout_below="@id/nameArea"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License: MD-1234-CA"
            android:textColor="#666"
            android:textSize="13sp"/>

        <!-- Working Hours -->
        <TextView
            android:id="@+id/txtWorkingHours"
            android:layout_below="@id/tvLicense"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00 AM - 10:00 PM"
            android:textColor="#555"
            android:textSize="13sp"/>

        <!-- Working Days -->
        <TextView
            android:id="@+id/txtWorkingDays"
            android:layout_below="@id/txtWorkingHours"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon - Fri"
            android:textColor="#777"
            android:textSize="13sp"/>

        <!-- Availability -->
        <TextView
            android:id="@+id/tvAvailability"
            android:layout_below="@id/txtWorkingDays"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Today"
            android:textSize="13sp"
            android:textColor="#0CA55A" />

        <!-- Distance -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_below="@id/tvAvailability"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3 km away"
            android:textSize="12sp"
            android:textColor="#444"
            android:visibility="gone" />

        <!-- Buttons row -->
        <LinearLayout
            android:id="@+id/buttonRow"
            android:orientation="horizontal"
            android:layout_below="@id/tvDistance"
            android:layout_toEndOf="@id/tvInitials"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:backgroundTint="@color/purple_500"
                android:text="Book Appointment"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/btnCall"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_call"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_icon_bg"
                android:padding="10dp"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
