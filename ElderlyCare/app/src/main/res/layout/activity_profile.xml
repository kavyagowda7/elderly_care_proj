<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Back + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Profile Picture -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/white_card_bg"
                    android:clipToOutline="true"
                    android:elevation="2dp" />

                <ImageView
                    android:id="@+id/changePhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_gradient_primary"
                    android:padding="6dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@android:color/white"
                    android:layout_marginEnd="2dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/userName"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Personal Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:paddingEnd="8dp">

            <TextView
                android:text="Personal Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/btnEdit"
                android:text="Edit"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_card_bg"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <!-- DOB -->
            <LinearLayout
                style="@style/ProfileRow">
                <ImageView
                    android:src="@drawable/ic_calender"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/purple_700" />
                <TextView
                    android:text="Date of Birth"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileLabel" />
                <EditText
                    android:id="@+id/inputDob"
                    style="@style/ProfileValue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="January 1, 1945"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                style="@style/ProfileRow">
                <ImageView
                    android:src="@drawable/ic_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/purple_700" />
                <TextView
                    android:text="Address"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileLabel" />
                <EditText
                    android:id="@+id/inputAddress"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileValue"
                    android:text="123 Serenity Lane, Meadowville"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Caregiver -->
            <LinearLayout
                style="@style/ProfileRow">
                <ImageView
                    android:src="@drawable/ic_people"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/purple_700" />
                <TextView
                    android:text="Primary Caregiver"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileLabel" />
                <EditText
                    android:id="@+id/inputCaregiver"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileValue"
                    android:text=" "
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contact Info -->
        <TextView
            android:text="Contact Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_card_bg"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp">

            <!-- Phone -->
            <LinearLayout
                style="@style/ProfileRow">
                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/purple_700" />
                <TextView
                    android:text="Phone Number"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileLabel" />
                <EditText
                    android:id="@+id/inputPhone"
                    style="@style/ProfileValue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="+1 (555) 123-4567"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                style="@style/ProfileRow">
                <ImageView
                    android:src="@drawable/ic_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/purple_700" />
                <TextView
                    android:text="Email"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileLabel" />
                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/ProfileValue"
                    android:text="john.appleseed@email.com"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
