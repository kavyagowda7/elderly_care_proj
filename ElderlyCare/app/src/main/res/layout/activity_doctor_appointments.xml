<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E7F6FF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Blue Banner -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/top_blue_gradient"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">

            <ImageView
                android:id="@+id/backBtn"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:text="Appointments"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Appointment Stats Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Today -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/todayCount"
                    android:text="0"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#5A8EFE"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:text="Today"
                    android:textColor="#888"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Upcoming -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/upcomingCount"
                    android:text="0"
                    android:textColor="#A76FF2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:text="Upcoming"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#888" />
            </LinearLayout>

            <!-- Completed -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/completedCount"
                    android:text="2"
                    android:textColor="#17C688"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:text="Completed"
                    android:textColor="#888"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_background"
            android:padding="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tabToday"
                android:text="Today"
                android:tag="today"
                android:background="@drawable/tab_selected"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tabUpcoming"
                android:text="Upcoming"
                android:tag="upcoming"
                android:textColor="#555"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tabCompleted"
                android:text="Completed"
                android:tag="completed"
                android:textColor="#555"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Empty State Card -->
        <LinearLayout
            android:id="@+id/emptyStateCard"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_white_card"
            android:padding="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_calender"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/emptyTitle"
                android:text="No appointments today"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/emptySubtitle"
                android:text="Your schedule is clear for today"
                android:textColor="#777"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>
